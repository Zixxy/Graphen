<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Name="MainPanel" x:Class="Graphen.MainWindow"
        Title="Graphen" Height="412.971" Width="672.803"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid x:Name="MainGrid" DataContext="{Binding Logic}" Cursor="Hand" Background="#FF939393">
        <Menu HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="118" ClipToBounds="True" Margin="0,20,0,0">
            <MenuItem x:Name="Draw" Header="Add Vertex" Height="35" Width="118" HorizontalAlignment="Center" VerticalAlignment="Center" Click="PickCircleTool"/>
            <MenuItem Header="Remove Vertex" Height="35" Width="118" HorizontalAlignment="Center" VerticalAlignment="Center" Click="PickRemoveVertexTool"/>
            <MenuItem Header="Add Edge" Height="35" Width="118" Click="PickEdgeTool"/>
            <MenuItem Header="Color" Height="35" Width="118"/>
            <MenuItem Header="Validate" Height="35" Width="118"/>
            <MenuItem Header="Arrange" Height="35" Width="118" Click="ArrangeVertices"/>
        </Menu>
        <Border HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="22" Background="#FF999999">
        </Border>
        <Button Content="File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="75,0,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Tools" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Options" HorizontalAlignment="Left" Margin="225,0,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Help" HorizontalAlignment="Left" Margin="300,0,0,0" VerticalAlignment="Top" Width="75"/>
        <Canvas Margin="118,22,0,0" Background="Black">
            <Canvas x:Name="paintSurface" MouseWheel="PaintSurfaceMouseWheel" Background="White"
        		Cursor="Hand" MouseLeftButtonDown="DrawElement" Height="345" Width="532" Canvas.Left="5" Canvas.Top="5">
                <Canvas.RenderTransform>
                    <ScaleTransform x:Name="scaleTransform"/>
                </Canvas.RenderTransform>
            </Canvas>

        </Canvas>

    </Grid>
</Window>
